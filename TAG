    <script>
        // بيانات المنتجات
        const products = [
            { name: "ورق زبدة إسباني", size: "A4", price: 20 },
            { name: "ورق زبدة إسباني", size: "A3", price: 40 },
            { name: "ورق الديكال المائي", size: "A4", price: 30 },
            { name: "ورق الديكال المائي", size: "A3", price: 60 },
            { name: "الترانسفير بالضغط", size: "A4", price: 100 },
            { name: "الترانسفير بالضغط", size: "A3", price: 200 }
        ];

        // إضافة المنتجات إلى الصفحة ديناميكيًا
        const productList = document.getElementById("product-list");
        products.forEach(product => {
            const productDiv = document.createElement("div");
            productDiv.classList.add("product");
            productDiv.innerHTML = `
                <h2>${product.name}</h2>
                <p>الحجم: ${product.size}</p>
                <p>السعر: ${product.price} جنيه</p>
            `;
            productList.appendChild(productDiv);
        });
    </script>
